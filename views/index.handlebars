<div class="jumbotron">
    <div class="container">
        <div class="btn-toolbar">
            <button type="button" class="btn btn-success pull-right" data-toggle="modal" data-target="#signInModal">Sign In</button>
            <button type="button" class="btn btn-warning pull-right" data-toggle="modal" data-target="#signUpModal">Sign Up</button>
        </div>
    </div>
    <h1>Storyboard</h1>
    <h2>Create...Collaborate...Enjoy</h2>
    <br>
    <button type="button" class="btn btn-primary btn-lg center-block" data-toggle="modal" data-target="#startStoryModal">Start your own story</button>
</div>



 {{#each this.stories}}
    <div class="well well-lg">
        <div class="panel">
            <div class="panel panel-header">
                <h2>{{this.title}}</h2>
            </div>
            <div class="panel panel-body">
                <p>{{this.blurb}}</p>
                <button type="submitStory button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#myModal">View Full Story</button>
                <div class="panel-footer">Contributer Count</div>
            </div>
        </div>
    </div>
{{/each}}

    <!--launches modal when user clicks "create story"-->
    <div class="modal fade" id="startStoryModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Create a Story</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <form role="form">
                                <div class="form-group">
                                    <label>Story Title</label>
                                    <input id="textbox" type="text" class="form-control" id="story_text">
                                    <label>Blurb</label>
                                    <input id="textbox" type="text" class="form-control" id="story_text">
                                    <label for="">Your Contribution</label>
                                    <input id="textbox" type="text" class="form-control" id="story_text">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div>
            </div>
        </div>
    </div>

        <!--launches modal when user clicks "sign in"-->
    <div class="modal fade" id="signInModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Sign In</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <form role="form">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input id="textbox" type="text" class="form-control" id="story_text">
                                    <label>Password</label>
                                    <input id="textbox" type="text" class="form-control" id="story_text">
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Sign In</button>
                </div>
            </div>
        </div>
    </div>

            <!--launches modal when user clicks "sign up"-->
    <div class="modal fade" id="signUpModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Sign Up</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <form role="form">
                                <div class="form-group">
                                    <label>Username</label>
                                    <input id="textbox" type="text" class="form-control" id="story_text">
                                    <label>Password</label>
                                    <input id="textbox" type="text" class="form-control" id="story_text">
                                    </div>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Sign Up</button>
                </div>
            </div>
        </div>
    </div>
