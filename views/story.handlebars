<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-xs-12">
            <img src="{{this.cover_art}}" class="coverart"/>
            <h2 class="title">{{this.title}}</h2>
            {{#each this.contributions}}
                <div class="row contribution_wrapper">
                    <div class="col-lg-2 metadata" data-id="{{this.user.id}}">
                        {{this.users.username}} 
                        <button type="button" class="submitArt btn btn-primary" data-toggle="modal" data-target="#artModal" data-contribution-id ="{{this.contributions.id}}">Contribute Art</button>
                    </div><!-- end metadata column-->
                    <div class="col-lg-10 contribution" data-contribution="{{this.id}}">
                        {{this.contribution_text}}
                    </div><!-- end contribution column -->  
                </div> <!-- end contribution row -->
            {{/each}}

        </div><!-- end story column-->

   </div> <!-- end story page row -->
   <br>
   <br>
    <button type="button" class="submitStory btn btn-primary center-block" data-toggle="modal" data-target="#contributeModal">Contribute to Story</button>
</div><!-- end container -->


<!--launches modal when user clicks "add to story"-->
    <div class="modal fade" id="contributeModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Contribute to the Story</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <form role="form" action="/api/new/contribution/{{this.id}}" method="POST">
                                <div class="form-group">
                                    <label for="">Your Contribution</label>
                                    <textarea name="contribution_text" type="text" rows="5" class="form-control" id="story_text"></textarea>
                                </div>
                                <div class="btn-toolbar">
                                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary pull-right">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

<!--launches modal for cover art-->
    <div class="modal fade" id="artModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog modal-xl" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Add Cover Art</h4>
                </div>
                <div class="modal-body">
                    <div class="panel panel-default">
                        <div class="panel-body">

                            <form role="form" action="/" method="POST">
                                <div class="form-group">
                                    <label for="">Add Your Art</label>
                                    <form action="myform.cgi">
                                        <input type="file" name="fileupload" value="fileupload" id="fileupload"> 
                                        <label for="fileupload"> Select a file to upload</label> 
                                        <input type="submit" value="submit"> 
                                    </form>
                                    <input type="text" class="form-control" id="story_text">
                                </div>
                                <div class="btn-toolbar">
                                    <button type="button" class="btn btn-default pull-right" data-dismiss="modal">Close</button>
                                    <button type="submit" class="btn btn-primary pull-right">Save changes</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>